<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEDC58"
    tools:context=".activities.TaskDetailActivity">

    <TextView
        android:id="@+id/TaskDetailActivityTaskDetailsHeader"
        android:layout_width="142dp"
        android:layout_height="38dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="132dp"
        android:text="@string/taskDetails"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TaskDetailActivityTVTitle"
        android:layout_width="175dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:textColor="#33691E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TaskDetailActivityTaskDetailsHeader" />

    <TextView
        android:id="@+id/TaskDetailActivityTVBody"
        android:layout_width="331dp"
        android:layout_height="273dp"
        android:layout_marginBottom="56dp"
        android:textColor="#33691E"
        app:layout_constraintBottom_toTopOf="@+id/TaskDetailActivityTVState"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TaskDetailActivityTVTitle"
        app:layout_constraintVertical_bias="0.979" />

    <TextView
        android:id="@+id/TaskDetailActivityTVState"
        android:layout_width="175dp"
        android:layout_height="42dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="108dp"
        android:textColor="#33691E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>