<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TaskFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/TaskFragmentNameTextView"
        android:layout_width="387dp"
        android:layout_height="116dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TaskFragTVTitle"
        android:layout_width="91dp"
        android:layout_height="39dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/TaskFragmentNameTextView"
        app:layout_constraintStart_toStartOf="@+id/TaskFragmentNameTextView" />

    <TextView
        android:id="@+id/TaskFragTVBody"
        android:layout_width="108dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/TaskFragmentNameTextView"
        app:layout_constraintEnd_toStartOf="@+id/TaskFragTVState"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toEndOf="@+id/TaskFragTVTitle"
        app:layout_constraintTop_toTopOf="@+id/TaskFragmentNameTextView" />

    <TextView
        android:id="@+id/TaskFragTVState"
        android:layout_width="92dp"
        android:layout_height="37dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/TaskFragmentNameTextView"
        app:layout_constraintEnd_toEndOf="@+id/TaskFragmentNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>